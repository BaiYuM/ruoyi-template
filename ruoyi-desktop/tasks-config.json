        "delay": 500
      },
      {
        "selector": "button[onclick*='generate'], .generate-btn",
        "description": "点击生成按钮",
        "action": "click",
        "required": true,
        "delay": 3000
      },
      {
        "selector": "button[onclick*='export'], .export-btn",
