[
  {
    "id": "login_task",
    "name": "登录任务",
    "description": "执行登录操作的自动化任务",
    "enabled": true,
    "tasks": [
      {
        "selector": "input[placeholder*='账'], input[placeholder*='用户'], input[type='text']:first-of-type, .el-input__inner:first-of-type",
        "description": "输入用户名",
        "action": "type",
        "value": "admin",
        "required": true,
        "delay": 800
      },
      {
        "selector": "input[type='password'], input[placeholder*='密码'], .el-input__inner[type='password']",
        "description": "输入密码",
        "action": "type",
        "value": "admin123",
        "required": true,
        "delay": 800
      },
      {
        "selector": "input[placeholder*='验证'], input[name='code'], .el-input__inner:last-of-type",
        "description": "等待人工输入验证码",
        "action": "waitForManual",
        "waitType": "elementHasValue",
        "waitSelector": "input[placeholder*='验证'], input[name='code'], .el-input__inner:last-of-type",
        "timeout": 60000,
        "message": "✅ 请手动输入验证码，输入后脚本将自动继续登录",
        "required": true,
        "delay": 500
      },
      {
        "selector": "button.el-button--primary, button[type='submit'], .login-btn, button:contains('登录')",
        "description": "点击登录按钮",
        "action": "click",
        "required": true,
        "delay": 1500
      },
      {
        "selector": "",
        "description": "检查登录结果",
        "action": "checkLoginResult",
        "timeout": 15000,
        "message": "正在检测登录结果...",
        "required": false,
        "delay": 500
      },
      {
        "selector": "",
        "description": "等待登录成功",
        "action": "waitForManual",
        "waitType": "loginSuccess",
        "timeout": 60000,
        "message": "正在检测登录状态...",
        "required": true,
        "delay": 500
      }
    ]
  },
