  {
    "id": "report_generation_task",
    "name": "报表生成任务",
    "description": "执行报表生成的自动化任务",
    "enabled": true,
    "tasks": [
      {
        "selector": "a[href*='report'], .report-menu",
        "description": "点击报表菜单",
        "action": "click",
        "required": true,
        "delay": 1000
      },
      {
        "selector": "select[name='reportType'], .report-type",
        "description": "选择报表类型",
        "action": "type",
        "value": "daily",
        "required": true,
        "delay": 500
      },
      {
        "selector": "input[name='startDate']",
        "description": "输入开始日期",
