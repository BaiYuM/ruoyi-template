  {
    "id": "data_entry_task",
    "name": "数据录入任务",
    "description": "执行数据录入的自动化任务",
    "enabled": true,
    "tasks": [
      {
        "selector": "input[placeholder*='姓名'], input[name='name']",
        "description": "输入姓名",
        "action": "type",
        "value": "测试用户",
        "required": true,
        "delay": 300
      },
      {
        "selector": "input[placeholder*='电话'], input[name='phone']",
        "description": "输入电话",
        "action": "type",
        "value": "13800138000",
        "required": true,
        "delay": 300
      },
      {
        "selector": "input[placeholder*='邮箱'], input[name='email']",
