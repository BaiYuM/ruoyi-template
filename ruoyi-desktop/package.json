{
  "name": "ruoyi-desktop",
  "version": "1.0.0",
  "description": "Ruoyi框架桌面客户端",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch electron --exec electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "ruoyi",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "electron-store": "^8.1.0",
    "puppeteer-core": "^21.0.0",
    "ws": "^8.14.0"
  },
  "build": {
    "appId": "com.ruoyi.desktop",
    "productName": "Ruoyi Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!screenshots/",
      "!temp/"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
