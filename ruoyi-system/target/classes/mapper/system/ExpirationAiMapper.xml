<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ExpirationAiMapper">
    
    <resultMap type="com.ruoyi.system.domain.ExpirationAi" id="ExpirationAiResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="expirationDate"    column="expiration_date"    />
        <result property="openAi"    column="open_ai"    />
        <result property="funds"    column="funds"    />
        <result property="workPeriodType"    column="work_period_type"    />
        <result property="workPeriodStart"    column="work_period_start"    />
        <result property="workPeriodEnd"    column="work_period_end"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"    column="update_by"    />
    </resultMap>

    <resultMap type="com.ruoyi.system.domain.ExpirationAi" id="ExpirationAiCommentUserResult" extends="ExpirationAiResult">
        <result property="account" column="account"/>
        <result property="nickName" column="nickname"/>
        <result property="avatar" column="avatar"/>
    </resultMap>
    
    <resultMap type="com.ruoyi.system.domain.vo.AiCustomerServiceConfigVo" id="AiCustomerServiceConfigResult">
        <result property="id"    column="id"/>
        <result property="account"    column="account"/>
        <result property="nickName"    column="nickname"/>
    </resultMap>

    <sql id="selectExpirationAiVo">
        select id, user_id, expiration_date, open_ai, funds, work_period_type, work_period_start, work_period_end, create_time, create_by, update_time, update_by from expiration_ai
    </sql>
    
    <sql id="selectExpirationAiWithUser">
        SELECT 
            ea.id,
            ea.user_id,
            ea.expiration_date,
            ea.open_ai,
            ea.funds,
            ea.work_period_type,
            ea.work_period_start,
            ea.work_period_end,
            ea.create_time,
            ea.create_by,
            ea.update_time,
            ea.update_by,
            cu.nickname,
            cu.avatar as avatar
        FROM expiration_ai ea
        LEFT JOIN comment_user cu ON cu.id = ea.user_id
    </sql>

    <select id="selectExpirationAiList" parameterType="com.ruoyi.system.domain.ExpirationAi" resultMap="ExpirationAiResult">
        <include refid="selectExpirationAiVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="expirationDate != null "> and expiration_date = #{expirationDate}</if>
            <if test="openAi != null "> and open_ai = #{openAi}</if>
            <if test="funds != null "> and funds = #{funds}</if>
            <if test="workPeriodType != null "> and work_period_type = #{workPeriodType}</if>
            <if test="workPeriodStart != null "> and work_period_start = #{workPeriodStart}</if>
            <if test="workPeriodEnd != null "> and work_period_end = #{workPeriodEnd}</if>
            <if test="beginCreateTime != null"> and create_time &gt;= #{beginCreateTime} </if>
            <if test="endCreateTime != null"> and create_time &lt;= #{endCreateTime} </if>
        </where>
    </select>

    <select id="selectExpirationAiWithUserList" parameterType="com.ruoyi.system.domain.ExpirationAi" resultMap="ExpirationAiResult">
        <include refid="selectExpirationAiWithUser"/>
        <where>
            <if test="userId != null"> AND ea.user_id = #{userId}</if>
            <if test="expirationDate != null"> AND ea.expiration_date = #{expirationDate}</if>
            <if test="openAi != null"> AND ea.open_ai = #{openAi}</if>
            <if test="funds != null"> AND ea.funds = #{funds}</if>
            <if test="workPeriodType != null"> AND ea.work_period_type = #{workPeriodType}</if>
            <if test="workPeriodStart != null"> AND ea.work_period_start = #{workPeriodStart}</if>
            <if test="workPeriodEnd != null"> AND ea.work_period_end = #{workPeriodEnd}</if>
            <if test="nickName != null and nickName != ''"> AND cu.nickname LIKE concat('%', #{nickName}, '%')</if>
            <if test="beginCreateTime != null"> AND ea.create_time &gt;= #{beginCreateTime}</if>
            <if test="endCreateTime != null"> AND ea.create_time &lt;= #{endCreateTime}</if>
        </where>
    </select>
    

    <select id="selectExpirationAiWithCommentUserList" parameterType="com.ruoyi.system.domain.ExpirationAi" resultMap="ExpirationAiResult">
        SELECT 
            ea.id,
            ea.user_id,
            ea.expiration_date,
            ea.open_ai,
            ea.funds,
            ea.work_period_type,
            ea.work_period_start,
            ea.work_period_end,
            ea.create_time,
            ea.create_by,
            ea.update_time,
            ea.update_by,
            cu.account,
            cu.nickname,
            cu.avatar
        FROM expiration_ai ea
        LEFT JOIN comment_user cu ON cu.id = ea.user_id
        <where>
            <if test="openAi != null"> AND ea.open_ai = #{openAi}</if>
            <if test="userId != null"> AND ea.user_id = #{userId}</if>
            <if test="expirationDate != null"> AND ea.expiration_date = #{expirationDate}</if>
            <if test="funds != null"> AND ea.funds = #{funds}</if>
            <if test="workPeriodType != null"> AND ea.work_period_type = #{workPeriodType}</if>
            <if test="workPeriodStart != null"> AND ea.work_period_start = #{workPeriodStart}</if>
            <if test="workPeriodEnd != null"> AND ea.work_period_end = #{workPeriodEnd}</if>
            <if test="beginCreateTime != null"> AND ea.create_time &gt;= #{beginCreateTime}</if>
            <if test="endCreateTime != null"> AND ea.create_time &lt;= #{endCreateTime}</if>
        </where>
        ORDER BY ea.create_time DESC
    </select>
    
    <select id="selectExpirationAiById" parameterType="Long" resultMap="ExpirationAiResult">
        <include refid="selectExpirationAiVo"/>
        where id = #{id}
    </select>

    <!-- 新增查询：查询AI客服配置中授权账户，只返回account和nickname -->
    <select id="selectAiCustomerServiceConfigList" parameterType="com.ruoyi.system.domain.vo.AiCustomerServiceConfigVo" resultMap="AiCustomerServiceConfigResult">
        SELECT 
            ea.id,
            cu.account,
            cu.nickname
        FROM expiration_ai ea
        LEFT JOIN comment_user cu ON cu.id = ea.user_id
        <where>
            <if test="openAi != null"> AND ea.open_ai = #{openAi}</if>

        </where>
        ORDER BY ea.create_time DESC
    </select>

    <insert id="insertExpirationAi" parameterType="com.ruoyi.system.domain.ExpirationAi">
        insert into expiration_ai
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="expirationDate != null">expiration_date,</if>
            <if test="openAi != null">open_ai,</if>
            <if test="funds != null">funds,</if>
            <if test="workPeriodType != null">work_period_type,</if>
            <if test="workPeriodStart != null">work_period_start,</if>
            <if test="workPeriodEnd != null">work_period_end,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="expirationDate != null">#{expirationDate},</if>
            <if test="openAi != null">#{openAi},</if>
            <if test="funds != null">#{funds},</if>
            <if test="workPeriodType != null">#{workPeriodType},</if>
            <if test="workPeriodStart != null">#{workPeriodStart},</if>
            <if test="workPeriodEnd != null">#{workPeriodEnd},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
         </trim>
    </insert>

    <update id="updateExpirationAi" parameterType="com.ruoyi.system.domain.ExpirationAi">
        update expiration_ai
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="expirationDate != null">expiration_date = #{expirationDate},</if>
            <if test="openAi != null">open_ai = #{openAi},</if>
            <if test="funds != null">funds = #{funds},</if>
            <if test="workPeriodType != null">work_period_type = #{workPeriodType},</if>
            <if test="workPeriodStart != null">work_period_start = #{workPeriodStart},</if>
            <if test="workPeriodEnd != null">work_period_end = #{workPeriodEnd},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteExpirationAiById" parameterType="Long">
        delete from expiration_ai where id = #{id}
    </delete>

    <delete id="deleteExpirationAiByIds" parameterType="String">
        delete from expiration_ai where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>