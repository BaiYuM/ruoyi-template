<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FaGroupChatMapper">
    
    <resultMap type="FaGroupChat" id="FaGroupChatResult">
        <result property="id"    column="id"    />
        <result property="groupName"    column="group_name"    />
        <result property="groupAvatar"    column="group_avatar"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="description"    column="description"    />
        <result property="maxMemberCount"    column="max_member_count"    />
        <result property="isDisbanded"    column="is_disbanded"    />
        <result property="isMute"    column="is_mute"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectFaGroupChatVo">
        select id, group_name, group_avatar, creator_id, create_time, update_time, description, max_member_count, is_disbanded, is_mute, del_flag from fa_group_chat
    </sql>

    <select id="selectFaGroupChatList" parameterType="FaGroupChat" resultMap="FaGroupChatResult">
        <include refid="selectFaGroupChatVo"/>
        <where>  
            <if test="groupName != null  and groupName != ''"> and group_name like concat('%', #{groupName}, '%')</if>
            <if test="groupAvatar != null  and groupAvatar != ''"> and group_avatar = #{groupAvatar}</if>
            <if test="creatorId != null "> and creator_id = #{creatorId}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="maxMemberCount != null "> and max_member_count = #{maxMemberCount}</if>
            <if test="isDisbanded != null "> and is_disbanded = #{isDisbanded}</if>
            <if test="isMute != null "> and is_mute = #{isMute}</if>
        </where>
    </select>
    
    <select id="selectFaGroupChatById" parameterType="Long" resultMap="FaGroupChatResult">
        <include refid="selectFaGroupChatVo"/>
        where id = #{id}
    </select>

    <insert id="insertFaGroupChat" parameterType="FaGroupChat">
        insert into fa_group_chat
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="groupName != null and groupName != ''">group_name,</if>
            <if test="groupAvatar != null and groupAvatar != ''">group_avatar,</if>
            <if test="creatorId != null">creator_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="description != null">description,</if>
            <if test="maxMemberCount != null">max_member_count,</if>
            <if test="isDisbanded != null">is_disbanded,</if>
            <if test="isMute != null">is_mute,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="groupName != null and groupName != ''">#{groupName},</if>
            <if test="groupAvatar != null and groupAvatar != ''">#{groupAvatar},</if>
            <if test="creatorId != null">#{creatorId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="description != null">#{description},</if>
            <if test="maxMemberCount != null">#{maxMemberCount},</if>
            <if test="isDisbanded != null">#{isDisbanded},</if>
            <if test="isMute != null">#{isMute},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateFaGroupChat" parameterType="FaGroupChat">
        update fa_group_chat
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupName != null and groupName != ''">group_name = #{groupName},</if>
            <if test="groupAvatar != null and groupAvatar != ''">group_avatar = #{groupAvatar},</if>
            <if test="creatorId != null">creator_id = #{creatorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="description != null">description = #{description},</if>
            <if test="maxMemberCount != null">max_member_count = #{maxMemberCount},</if>
            <if test="isDisbanded != null">is_disbanded = #{isDisbanded},</if>
            <if test="isMute != null">is_mute = #{isMute},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFaGroupChatById" parameterType="Long">
        delete from fa_group_chat where id = #{id}
    </delete>

    <delete id="deleteFaGroupChatByIds" parameterType="String">
        delete from fa_group_chat where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>