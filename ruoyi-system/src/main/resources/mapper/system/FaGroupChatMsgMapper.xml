<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FaGroupChatMsgMapper">
    
    <resultMap type="FaGroupChatMsg" id="FaGroupChatMsgResult">
        <result property="id"    column="id"    />
        <result property="groupId"    column="group_id"    />
        <result property="senderId"    column="sender_id"    />
        <result property="msgType"    column="msg_type"    />
        <result property="msgContent"    column="msg_content"    />
        <result property="sendTime"    column="send_time"    />
        <result property="isRecalled"    column="is_recalled"    />
        <result property="recallTime"    column="recall_time"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectFaGroupChatMsgVo">
        select id, group_id, sender_id, msg_type, msg_content, send_time, is_recalled, recall_time, del_flag from fa_group_chat_msg
    </sql>

    <select id="selectFaGroupChatMsgList" parameterType="FaGroupChatMsg" resultMap="FaGroupChatMsgResult">
        <include refid="selectFaGroupChatMsgVo"/>
        <where>  
            <if test="groupId != null "> and group_id = #{groupId}</if>
            <if test="senderId != null "> and sender_id = #{senderId}</if>
            <if test="msgType != null "> and msg_type = #{msgType}</if>
            <if test="msgContent != null  and msgContent != ''"> and msg_content = #{msgContent}</if>
            <if test="sendTime != null "> and send_time = #{sendTime}</if>
            <if test="isRecalled != null "> and is_recalled = #{isRecalled}</if>
            <if test="recallTime != null "> and recall_time = #{recallTime}</if>
        </where>
    </select>
    
    <select id="selectFaGroupChatMsgById" parameterType="Long" resultMap="FaGroupChatMsgResult">
        <include refid="selectFaGroupChatMsgVo"/>
        where id = #{id}
    </select>

    <insert id="insertFaGroupChatMsg" parameterType="FaGroupChatMsg">
        insert into fa_group_chat_msg
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="groupId != null">group_id,</if>
            <if test="senderId != null">sender_id,</if>
            <if test="msgType != null">msg_type,</if>
            <if test="msgContent != null and msgContent != ''">msg_content,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="isRecalled != null">is_recalled,</if>
            <if test="recallTime != null">recall_time,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="groupId != null">#{groupId},</if>
            <if test="senderId != null">#{senderId},</if>
            <if test="msgType != null">#{msgType},</if>
            <if test="msgContent != null and msgContent != ''">#{msgContent},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="isRecalled != null">#{isRecalled},</if>
            <if test="recallTime != null">#{recallTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateFaGroupChatMsg" parameterType="FaGroupChatMsg">
        update fa_group_chat_msg
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupId != null">group_id = #{groupId},</if>
            <if test="senderId != null">sender_id = #{senderId},</if>
            <if test="msgType != null">msg_type = #{msgType},</if>
            <if test="msgContent != null and msgContent != ''">msg_content = #{msgContent},</if>
            <if test="sendTime != null">send_time = #{sendTime},</if>
            <if test="isRecalled != null">is_recalled = #{isRecalled},</if>
            <if test="recallTime != null">recall_time = #{recallTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFaGroupChatMsgById" parameterType="Long">
        delete from fa_group_chat_msg where id = #{id}
    </delete>

    <delete id="deleteFaGroupChatMsgByIds" parameterType="String">
        delete from fa_group_chat_msg where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>